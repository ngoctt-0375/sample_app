<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t("micro_post.feed")%></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
</div>
<% else %>
  <head>
<% provide :title, t("static_pages.home.title") %>
</head>
<body>
<h1><%= raw t("static_pages.home.title") %></h1>
<div class="center jumbotron">
  <h1><%= t("static_pages.home.title") %></h1>

  <h2>
    <%= raw t("static_pages.home.description") %>
  </h2>

  <%= link_to t("static_pages.home.sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("rails.svg", alt: "Rails logo", width: "200"),
                      "https://rubyonrails.org/" %>
<%= link_to image_tag("kitten.jpg", alt: "cat", width: "200") %>
</body>
<% end %>

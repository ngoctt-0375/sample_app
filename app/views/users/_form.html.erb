<%= form_with(model: @user) do |f| %>
      <%= render "shared/error_messages"%>
      <%= f.label :name, t("sign_up.label.name") %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password, t("sign_up.label.password") %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, t("sign_up.label.confirmation") %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit t("sign_up.submit"), class: "btn btn-primary" %>
<% end %>
